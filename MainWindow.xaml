<Window x:Class="BookingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModel="clr-namespace:BookingSystem.MVVM.ViewModel"
        xmlns:prism="http://www.codeplex.com/prism" 
        xmlns:core="clr-namespace:BookingSystem.Core" 
        d:DataContext="{d:DesignInstance Type=core:ObservableObject}"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="700" 
        Width="1300" 
        WindowStyle="None"
        MouseDown="Window_MouseDown"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border CornerRadius="5" BorderThickness="1">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.8">
                <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Logo and Text Column -->
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0">
                
                <Grid >
                <!-- Logo and Text -->
                    <StackPanel Orientation="Horizontal"
                    Margin="15,0,0,0"
                    Height="35" 
                    VerticalAlignment="Top">
                        <Image Source="/Images/Logof.png" 
                    Height="30"/>
                        <TextBlock Text="SPAREBNB"
                   Foreground="{StaticResource titleColor2}"
                   FontSize="20"
                   FontWeight="Medium"
                   VerticalAlignment="Center"
                   Margin="15,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Vertical"
                                VerticalAlignment="Top"
                                Margin="10,120,10,0"
                                Height="350"
                                Background="{StaticResource color6}">
                        
                        <TextBlock Text="Search"
                                   Margin="10,5,0,0"
                                   HorizontalAlignment="Left"
                                   FontSize="18"/>
                        
                        <TextBlock Text="property name"
                                   Margin="10,5,0,0"
                                   HorizontalAlignment="Left"
                                   FontSize="10"/>
                        <Grid>
                        <TextBox Width="160"
                                 Height="30"
                                 Margin="0,5,0,0"
                                 Background="AntiqueWhite"
                                 Padding="30,5,0,0"/>
                        <fa:IconImage Icon="Search"
                                      Height="20"
                                      Margin="15,5,15,0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="left"
                                      Foreground="DarkGray"/>
                        </Grid>

                        <TextBlock Text="Check-in date"
                                   Margin="10,5,0,0"
                                   HorizontalAlignment="Left"
                                   FontSize="10"/>
                        <Grid>
                                 <TextBox Width="160"
                                          Height="30"
                                          Margin="0,5,0,0"
                                          Background="AntiqueWhite"
                                          Padding="30,5,0,0"/>
                            <fa:IconImage Icon="Calendar"
                                          Height="20"
                                          Margin="15,5,15,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="left"
                                          Foreground="DarkGray"/>
                        </Grid>

                        <TextBlock Text="Check-Out date"
                                   Margin="10,5,0,0"
                                   HorizontalAlignment="Left"
                                   FontSize="10"/>
                        <Grid>
                            <TextBox Width="160"
                                     Height="30"
                                     Margin="0,5,0,0"
                                     Background="AntiqueWhite"
                                     Padding="30,5,0,0"/>
                            <fa:IconImage Icon="Calendar"
                                          Height="20"
                                          Margin="15,5,15,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="left"
                                          Foreground="DarkGray"/>
                        </Grid>
                          <TextBlock Text="property name"
                                           Margin="10,5,0,0"
                                           HorizontalAlignment="Left"
                                           FontSize="10"/>
                        <Grid>
                            <TextBox Width="160"
                                        Height="30"
                                        Margin="0,5,0,0"
                                        Background="AntiqueWhite"
                                        Padding="30,5,0,0"/>
                            <fa:IconImage Icon="Search"
                                          Height="20"
                                          Margin="15,5,15,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="left"
                                          Foreground="DarkGray"/>
                        </Grid>

                        <Button Content="Search"
                                Foreground="{StaticResource color8}"
                                FontSize="18"
                                FontWeight="Medium"
                                Margin="10,25,10,5"
                                Command="{Binding SearchCommand}"
                                />
                    </StackPanel>
                    
                </Grid>
            </Border>

            <Border Grid.Column="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Control bar -->
                        <RowDefinition Height="35"/>
                        <!--User DisplayName-->
                        <RowDefinition Height="35"/>
                        <!--Content Section/ Child views-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Control Bar-->
                    <StackPanel x:Name="pnlControlbar" 
                              Grid.Row="0" 
                              Orientation="Horizontal" 
                              FlowDirection="RightToLeft" 
                              Background="Transparent" 
                              Margin="0,0,5,0">
                        <Button x:Name="btnClose"
                             Style="{StaticResource controlButton}"
                             Tag="{StaticResource color4}"
                             Click="btnClose_Click">
                            <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"/>
                        </Button>

                        <Button x:Name="btnMaximize"
                       Style="{StaticResource controlButton}"
                       Tag="{StaticResource color6}"
                       Click="BtnMaximize_Click">
                            <fa:IconImage Icon="Square" Style="{StaticResource controlButtonIcon}"/>
                        </Button>

                        <Button x:Name="btnMinimize"
                            Style="{StaticResource controlButton}"
                            Tag="{StaticResource color6}"
                            Click="BtnMinimize_Click">
                            <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!-- Welcome user (if needed) -->
                        <StackPanel Grid.Column="1"
                      Orientation="Horizontal"
                      FlowDirection="RightToLeft"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0">
                            <TextBlock Text="{Binding CurrentUserAccount.DisplayName}"
                      FontSize="14"
                      FontWeight="Bold"
                      Margin="15,0,10,0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                     Foreground="{StaticResource color1}"/>

                            <Ellipse Height="35"
                                     Width="35"
                                     Stroke="{StaticResource color2}"
                                     Margin="10,0,10,0">
                            </Ellipse>

                            <Button Style="{StaticResource IconButton}"
                                    Tag="{StaticResource color1}">
                                <fa:IconImage Icon="Clock" Style="{StaticResource IconButtonIcon}"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}"
                                    Tag="{StaticResource color1}">
                                <fa:IconImage Icon="Envelope" Style="{StaticResource IconButtonIcon}"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}"
                                    Tag="{StaticResource color1}">
                                <fa:IconImage Icon="Bell" Style="{StaticResource IconButtonIcon}"/>
                            </Button>

                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="2">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1000"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0"
                                    Orientation="Vertical"
                                    Margin="50,50,0,0">

                            <DataGrid ItemsSource="{Binding Bookings}" 
                                      AutoGenerateColumns="True"
                                      Height="400"
                                      Background="{StaticResource color5}"
                                      Foreground="AntiqueWhite"/>

                        </StackPanel>

                    </Grid>
                </Grid>
            </Border>

        </Grid>

    </Border>
</Window>
